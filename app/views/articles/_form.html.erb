<% form_for(@article) do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </p>
  <p>
    <%= f.label :body %><br />
    <%= f.text_area :body %>
  </p>
  <p>
    <%= f.label :status %><br />
    <%= select :article, :status, Article.statuses %>
  </p>
  <p>
    <%= f.label :date_posted %><br />
    <%= f.datetime_select :date_posted %>
  </p>
  <p>
    <%= f.label :author %><br />
    <% unless Author.count.zero? %>
      <%= collection_select(:article, :author_id, Author.all, :id, :full_name) %>
    <% else %>
      <span class="reminder_link">
        There are no authors yet. 
        <%= link_to('Create one first.', new_author_path, :target => '_blank') if Author.count.zero? %>
      </span>
    <% end %>
  </p>
  <p>
    <%= f.submit 'Update' %>
  </p>
<% end %>
