<div>
  <h3 class="blog-title">
    <%= @article.title %>
  </h3>
  <h4 class="blog-author">
    <%= @article.date_posted_f %> by
    <%= @article.author.full_name %>
  </h4>
  <p class="blog-body">
    <%= @article.body %>
  </p>
<%= link_to 'Print', print_article_path(@article) %>
  <div class="blog-comments">
    <% @article.comments.each do |comment| %>
      <%= comment_box comment %>
    <% end %>
    <%= render :partial => 'comments/form', :locals => {:comments => @comment, :article => @article} %>
  </div>
</div>
