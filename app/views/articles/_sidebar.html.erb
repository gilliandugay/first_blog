<h3>Recent Posts</h3>
<ul id="article-list">
  <% Article.recent_posts.each do |article| %>
    <% if @article.nil? and (not article.eql? @article) %>
      <li>
        <% short_title = truncate(article.title, :length => 50) %>
        <%= link_to short_title, article %>
      </li>
    <% end %>
  <% end %>
</ul>
