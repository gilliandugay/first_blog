<h2>Login</h2>
<% form_for @author_session, :url => sessions_path do |f| %>
  <%= f.error_messages %>
  <p>
    <%= f.label :login %>
    <%= f.text_field :login %>
  </p>
  <p>
    <%= f.label :password %>
    <%= f.password_field :password %>
  </p>
  <p>
    <%= f.check_box :remember_me %>
    <%= f.label :remember_me %>
  </p>
  <p>
    <%= f.submit 'Login' %>
  </p>
<% end %>
