<fieldset>
  <p>
    <%= f.label :last_name %>
    <%= f.text_field :last_name %>
  </p>
  <p>
    <%= f.label :first_name %>
    <%= f.text_field :first_name %>
  </p>
  <p>
    <%= f.label :remarks %>
    <%= f.text_area :remarks %>
  </p>
  <p>
    <%= f.label :birthday %>
    <%= date_select :author, :birthday, :start_year => 1920, :end_year => Time.now.year - 4, :default => Time.now, :order => [:month, :day, :year] %>
  </p>
</fieldset>
<fieldset>
  <p>
    <%= f.label :login %>
    <%= f.text_field :login %>
  </p>
  <p>
    <%= f.label :email %>
    <%= f.text_field :email %>
  </p>
  <p>
    <%= f.label :password %>
    <%= f.password_field :password %>
  </p>
  <p>
    <%= f.label :password_confirmation %>
    <%= f.password_field :password_confirmation %>
  </p>
</fieldset>
