<p class="show_field">
  <em>Last Name:</em>
  <%= @author.last_name %>
</p>

<p class="show_field">
  <em>First Name:</em>
  <%= @author.first_name %>
</p>

<p class="show_field">
  <em>Remarks:</em>
  <%= @author.remarks %>
</p>

<p class="show_field">
  <em>Birthday:</em>
  <%= format_date @author.birthday %>
</p>

<% if @author.eql? current_author %>
<%= link_to 'Edit', edit_author_path(@author) %> |
<%= link_to 'Delete', @author, :confirm => "Are you sure you want to delete this author?", :method => :delete %> |
<% end %>

<%= link_to 'Back to list of authors', authors_path %>
